@page
@model BBallChallenge.Pages.Games.PastGamesModel

@{
    ViewData["Title"] = "PastGames";
}

<h1>PastGames</h1>
@if (User.Identity.IsAuthenticated)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Game[0].GameTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Game[0].GameDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Game[0].Venue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Game[0].Payee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Game[0].AmountPaid)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Game)
            {
                @if (item.GameDate < DateTime.Now)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.GameTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GameDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Venue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Payee)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AmountPaid)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
}
else
{
    <h1>You do not have permission to view this page</h1>
}
